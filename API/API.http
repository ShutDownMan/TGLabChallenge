@API_HostAddress = https://localhost:44354

// --- Public endpoints ---

// Weather forecast (no auth)
GET {{API_HostAddress}}/weatherforecast/
Accept: application/json

###

// --- Auth endpoints ---

// Register
POST {{API_HostAddress}}/api/Auth/register
Content-Type: application/json

{
  "username": "jedson",
  "password": "123456Sete"
}

###

// Login
POST {{API_HostAddress}}/api/Auth/login
Content-Type: application/json

{
  "username": "jedson",
  "password": "123456Sete"
}

###

// Validate token
POST {{API_HostAddress}}/api/Auth/validate-token
Content-Type: application/json

{
  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..c6e4t1oDebNo-B4jB44L7NCh0Ysx6D8xGCuJ-9uFK6g"
}

###

// --- User Endpoints ---

// Get user profile
GET {{API_HostAddress}}/api/User/profile
